# TESAIoT AI Service Template - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Service Configuration
# =============================================================================

# Service identifier (used in logs and metrics)
SERVICE_NAME=ai-service-template

# Service version
VERSION=1.0.0

# Runtime environment: development or production
ENVIRONMENT=development

# Logging level: debug, info, warning, error
LOG_LEVEL=info

# =============================================================================
# Server Configuration
# =============================================================================

# Server host (0.0.0.0 for Docker, 127.0.0.1 for local)
HOST=0.0.0.0

# Server port
PORT=8000

# =============================================================================
# Model Configuration
# =============================================================================

# Path to ML model file (optional)
# Supported formats: .pkl, .joblib, .h5, .pt, .onnx
# MODEL_PATH=/models/model.pkl

# =============================================================================
# API Configuration
# =============================================================================

# API prefix (leave empty for root)
API_PREFIX=

# Enable/disable API documentation
DOCS_ENABLED=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Maximum batch size for batch inference
MAX_BATCH_SIZE=100

# Request timeout in seconds
REQUEST_TIMEOUT_SECONDS=30

# =============================================================================
# TESAIoT Platform Integration (optional)
# =============================================================================

# TESAIoT API endpoint
# TESAIOT_API_URL=https://admin.tesaiot.com/api/v1

# TESAIoT API key (generate from Admin UI)
# TESAIOT_API_KEY=your_api_key_here
