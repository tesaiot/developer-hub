# TESAIoT Raspberry Pi Client Configuration
# Copy to .env and update with your credentials

# Device Configuration
DEVICE_ID=your-device-id

# MQTT Configuration (Server TLS - Port 8884)
MQTT_HOST=mqtt.tesaiot.com
MQTT_PORT=8884
MQTT_USERNAME=your-device-id
MQTT_PASSWORD=your-mqtt-password

# HTTPS Configuration (for --mode https)
API_BASE_URL=https://api.tesaiot.com
API_KEY=your-api-key

# TLS Configuration
CA_CERT_PATH=./certs/ca.pem
